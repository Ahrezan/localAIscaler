<Window x:Class="localAIscaler.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:localAIscaler"
       xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
       mc:Ignorable="d"
       Title="Local Artificial Intelligence Scaler"
       Height="380" Width="500"
       ResizeMode="NoResize"
       Background="#0e1825"
       SnapsToDevicePixels="True"
       UseLayoutRounding="True"
       WindowStartupLocation="CenterScreen">

    <!-- #region WindowChrome -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome 
            CaptionHeight="0" 
            ResizeBorderThickness="5" 
            GlassFrameThickness="1"
            NonClientFrameEdges="None"/>
    </shell:WindowChrome.WindowChrome>
    <!-- #endregion -->

    <Window.Resources>

        <!-- #region Slider Stili -->
        <Style x:Key="RoundedColoredSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Height="11"
                                    CornerRadius="4"
                                    Background="#1b293d"
                                    VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   IsDirectionReversed="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton IsEnabled="False" Height="6" VerticalAlignment="Center"
                                                  BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#da8339"
                                                        CornerRadius="3"
                                                        Height="6"
                                                        VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton IsEnabled="False" Height="6" VerticalAlignment="Center"
                                                  BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#1c293d"
                                                        CornerRadius="3"
                                                        Height="6"
                                                        VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="PART_Thumb" Width="16" Height="16">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Width="16" Height="16"
                                                        Background="#3b5874"
                                                        BorderBrush="#da8339"
                                                        BorderThickness="2"
                                                        CornerRadius="8"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- #endregion -->

        <SolidColorBrush 
      x:Key="{x:Static SystemColors.HighlightBrushKey}" 
      Color="Transparent" />
        <SolidColorBrush 
      x:Key="{x:Static SystemColors.ControlBrushKey}" 
      Color="Transparent" />
        <!-- Seçili metnin rengi beyaz kalsın -->
        <SolidColorBrush 
      x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
      Color="White" />

        <!-- #region ComboBox Stili -->
        <Style x:Key="CustomComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1a2330"/>
            <Setter Property="BorderBrush" Value="#20364b"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>

            <!-- İşte eklememiz gereken kısım: -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <!-- Temel görünüm -->
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <!-- İçerik sola dayalı kalsın -->
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Style.Triggers>
                            <!-- Hover ve seçildiğinde de transparan olsun -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Mevcut ControlTemplate’in -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                              Background="Transparent"
                              Foreground="White"
                              FocusVisualStyle="{x:Null}"
                              BorderThickness="0"
                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              ClickMode="Press"
                              HorizontalContentAlignment="Stretch">
                                    <Grid>
                                        <ContentPresenter Margin="10,0,30,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Content="{TemplateBinding SelectionBoxItem}"/>
                                        <Path x:Name="Arrow"
                          Data="M 0 0 L 4 4 L 8 0 Z"
                          Width="8" Height="8"
                          Fill="White"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"
                          RenderTransformOrigin="0.5,0.5"/>
                                    </Grid>
                                </ToggleButton>
                                <Popup x:Name="Popup"
                       Placement="Bottom"
                       IsOpen="{TemplateBinding IsDropDownOpen}"
                       OverridesDefaultStyle="True"
                       AllowsTransparency="True"
                       Focusable="False"
                       PopupAnimation="Slide">
                                    <Border Background="#1a2330"
                          BorderBrush="#172332"
                          BorderThickness="1"
                          CornerRadius="5"
                          MinWidth="{TemplateBinding ActualWidth}">
                                        <ScrollViewer>
                                            <ItemsPresenter Margin="5,2,5,2" />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Popup" Property="IsOpen" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- #endregion -->

        <!-- #region ProgressBar Stili -->
        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Foreground" Value="#da8339"/>
            <Setter Property="Background" Value="#131d2a"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <!-- 1) Dış border: arka plan + köşe -->
                        <Border 
                CornerRadius="10"
                Background="{TemplateBinding Background}"
                SnapsToDevicePixels="True"
                BorderThickness="0">
                            <!-- 2) İçerik için Grid, clip ile köşeleri koru -->
                            <Grid ClipToBounds="True">
                                <!-- 3) PART_Indicator: WPF otomatik olarak genişliğini Value/Max oranına göre ayarlıyor -->
                                <Rectangle 
                                x:Name="PART_Indicator"
                                AllowDrop="True"
                                RadiusX="10" RadiusY="10"
                                Fill="{TemplateBinding Foreground}"
                                HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- #endregion -->

    </Window.Resources>

    <!-- #region GRID Pencere içeriği -->
    <Grid Background="Transparent" 
          Loaded="Grid_Loaded" Margin="0,5,0,-5">
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="159*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#192330" MouseLeftButtonDown="WindowBackground_MouseLeftButtonDown"
                Margin="0,-5,0,2" Grid.ColumnSpan="2">
            <Label Content="L.A.i.S"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="20" Foreground="WhiteSmoke"
                FontFamily="Segoe UI" Margin="0,0,395,0" />
        </Border>

        <!-- #region Pencereyi kontrolü için butonlar -->
        <!-- Küçültme Butonu -->
        <Button Click="Minimize_Click"
            Background="Transparent"
            BorderThickness="0"
            Width="30" Height="30" Content="" Margin="429,5,41,11">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="Transparent">
                        <Path x:Name="MinIcon"
                            Width="15" Height="5"
                            Data="M 0,0 L 90,0 M 0,0 L 0,0"
                            Stretch="Uniform"
                            StrokeThickness="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Path.RenderTransform>
                            <Path.Stroke>
                                <SolidColorBrush x:Name="StrokeBrush" Color="White"/>
                            </Path.Stroke>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="StrokeBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#434343"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="StrokeBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="White"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Kapat Butonu -->
        <Button Click="Close_Click"
            Background="Transparent"
            BorderThickness="0"
            Width="30" Height="30" Margin="460,5,10,11">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="Transparent">
                        <Path x:Name="CloseIcon"
                            Width="15" Height="15"
                            Data="M 5,5 L 20,20 M 20,5 L 5,20"
                            Stretch="Uniform"
                            StrokeThickness="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Path.Stroke>
                                <SolidColorBrush x:Name="StrokeBrush" Color="White"/>
                            </Path.Stroke>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="StrokeBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#e81123"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="StrokeBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="White"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <!--#endregion-->

        <Rectangle x:Name="DropArea"
                   Grid.Row="1" Grid.ColumnSpan="2"
                   Margin="24,18,256,80"
                   Width="220" Height="220"
                   RadiusX="15" RadiusY="15"
                   Stroke="#30354a" StrokeThickness="3"
                   StrokeDashArray="2 2"
                   Fill="Transparent"
                   AllowDrop="True"
                   MouseLeftButtonDown="DropArea_MouseLeftButtonDown"
                   DragOver="DropArea_DragOver"
                   Drop="DropArea_Drop"/>
        <Label 
           Foreground="#7d8292"
           HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center"
           IsHitTestVisible="False"
           FontSize="15" Margin="24,19,256,84" Grid.Row="1" Height="215">
            <Image Name="PreviewImage"
                   AllowDrop="True"
                   Height="220"
                   Width="220"/>
        </Label>

        <ComboBox x:Name="ModelComboBox"
            Style="{StaticResource CustomComboBox}"
            Margin="262,49,25,231"
            SelectedIndex="0"
            FocusVisualStyle="{x:Null}" Grid.Row="1">

            <ComboBoxItem Content="Artwork" />
            <ComboBoxItem Content="Artwork/Scans" />
            <ComboBoxItem Content="Photo" />
        </ComboBox>
        <Label Content="Model"
            HorizontalAlignment="Left"
            Margin="263,22,0,0"
            VerticalAlignment="Top" Width="211"
            Padding="0"
            Foreground="WhiteSmoke" FontSize="18" Height="25" Grid.Row="1"/>

        <!-- #region Slider ve Label -->
        <Slider x:Name="NoiseSlider"
            Style="{StaticResource RoundedColoredSlider}"
            Minimum="0" Maximum="3" Value="1"
            Width="212" Height="35"
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            VerticalAlignment="Top"
            HorizontalAlignment="Left" Margin="262,130,0,0" Grid.Row="1"/>
        <Label Content="Noise Reduction"
            HorizontalAlignment="Left"
            Margin="263,105,0,0"
            VerticalAlignment="Top" Width="212"
            Padding="0"
            Foreground="WhiteSmoke" FontSize="18" Height="25" Grid.Row="1"/>
        <Slider x:Name="ScaleSlider"
            Style="{StaticResource RoundedColoredSlider}"
            Minimum="1" Maximum="4" Value="2"
            Width="212" Height="35"
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            VerticalAlignment="Top"
            HorizontalAlignment="Left" Margin="262,202,0,0" Grid.Row="1"/>
        <Label Content="Resolution Multiplier"
            HorizontalAlignment="Left"
            Margin="263,174,0,0"
            VerticalAlignment="Top" Width="212"
            Padding="0"
            Foreground="WhiteSmoke" FontSize="18" Height="25" Grid.Row="1"/>
        <!-- #endregion -->

        <ComboBox x:Name="FormatComboBox"
            Style="{StaticResource CustomComboBox}"
            Margin="24,263,345,17"
            SelectedIndex="0"
            FocusVisualStyle="{x:Null}" Grid.Row="1">

            <ComboBoxItem Content="PNG" />
            <ComboBoxItem Content="JPG" />
            <ComboBoxItem Content="WebP" />
        </ComboBox>
        <Button Name="StartButton"
        Content="Start"
        Background="#d87f37"
        Foreground="White"
        BorderThickness="0"
        Padding="0"
        Height="38"
        FontSize="16"
        Margin="360,263,25,17"
        Grid.Row="1"
        Click="StartButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
              Background="{TemplateBinding Background}"
              CornerRadius="8"
              BorderThickness="0"
              SnapsToDevicePixels="True"
              RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </Border.RenderTransform>
                        <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- MouseDown olayıyla anında ölçekle -->
                        <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Bd"
                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                               To="0.95"
                               Duration="0:0:0"/>
                                    <DoubleAnimation Storyboard.TargetName="Bd"
                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                               To="0.95"
                               Duration="0:0:0"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- MouseUp olayıyla eski haline getir -->
                        <EventTrigger RoutedEvent="PreviewMouseLeftButtonUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Bd"
                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                               To="1"
                               Duration="0:0:0"/>
                                    <DoubleAnimation Storyboard.TargetName="Bd"
                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                               To="1"
                               Duration="0:0:0"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- Optional: Hover efekti -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#e5944e"/>
                        </Trigger>
                        <!-- Optional: Disabled efekti -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <ProgressBar Name="ProcessProgressBar"
        Style="{StaticResource RoundedProgressBar}"
        Margin="181,263,164,17"
        Minimum="0" Maximum="100"
        Value="40" Grid.Row="1"/>
        <Label x:Name="InstructionLabel"
               Grid.Row="1"
               FontSize="16"
               Content="Click or Drag image"
               Foreground="#7d8292"
               Margin="59,112,291,0"
               VerticalAlignment="Top"/>

    </Grid>
    <!--#endregion-->
</Window>
